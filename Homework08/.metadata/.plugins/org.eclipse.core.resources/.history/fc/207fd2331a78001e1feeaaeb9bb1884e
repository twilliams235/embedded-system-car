//char process_buffer[25]; // Size for appropriate Command Length
//char pb_index; // Index for process_buffer
//extern volatile char IOT_Ring_Rx[SMALL_RING_SIZE];
//extern volatile char iot_TX_buf[SMALL_RING_SIZE];
