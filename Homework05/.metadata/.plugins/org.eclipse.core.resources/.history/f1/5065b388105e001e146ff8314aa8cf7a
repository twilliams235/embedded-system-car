#ifndef MACROS_H_
#define MACROS_H_


#define ALWAYS                  (1)
#define RESET_STATE             (0)
#define RED_LED              (0x01) // RED LED 0
#define GRN_LED              (0x40) // GREEN LED 1
#define TEST_PROBE           (0x01) // 0 TEST PROBE
#define TRUE                 (0x01)

#define USE_GPIO                (0x00)
#define USE_SMCLK               (0x01)

// STATES ========================================================
#define NONE                    ('N')
#define STRAIGHT                ('L')
#define CIRCLE                  ('C')
#define FIGURE8                 ('F')
#define TRIANGLE                ('T')

#define WAIT                    ('W')
#define START                   ('S')
#define RUN                     ('R')
#define END                     ('E')

#define WHEEL_COUNT_TIME                    (30)        //Controls the count period
#define RIGHT_COUNT_TIME_STRAIGHT           (7)
#define LEFT_COUNT_TIME_STRAIGHT            (7)
#define TRAVEL_DISTANCE_STRAIGHT            (2)
#define WAITING2START                       (150)

#define RIGHT_COUNT_TIME_CIRCLE           (1)
#define LEFT_COUNT_TIME_CIRCLE            (35)
#define TRAVEL_DISTANCE_CIRCLE            (20)

#define RIGHT_COUNT_TIME_LOOP1           (1)
#define LEFT_COUNT_TIME_LOOP1            (35)
#define TRAVEL_DISTANCE_LOOP1            (10)

#define RIGHT_COUNT_TIME_LOOP2           (35)
#define LEFT_COUNT_TIME_LOOP2            (1)
#define TRAVEL_DISTANCE_LOOP2            (20)

#define TRAVEL_DISTANCE_LOOP3            (30)
#define TRAVEL_DISTANCE_LOOP4            (40)

#define WHEEL_COUNT_TIME_TRIANGLE            (38)        //Controls the count period
#define WHEEL_COUNT_TIME_STRAIGHT            (10)        //Controls the count period
#define TRAVEL_DISTANCE_STRAIGHT1            (6)
#define TRAVEL_DISTANCE_TRIANGLETURN1            (9)
#define TRAVEL_DISTANCE_STRAIGHT2            (15)
#define TRAVEL_DISTANCE_TRIANGLETURN2            (18)
#define TRAVEL_DISTANCE_STRAIGHT3            (24)
#define TRAVEL_DISTANCE_TRIANGLETURN3            (27)
#define TRAVEL_DISTANCE_STRAIGHT4            (33)
#define TRAVEL_DISTANCE_TRIANGLETURN4            (36)
#define TRAVEL_DISTANCE_STRAIGHT5            (42)
#define TRAVEL_DISTANCE_TRIANGLETURN5            (45)
#define TRAVEL_DISTANCE_STRAIGHT6            (51)

#define RIGHT_COUNT_TIME_TRIANGLETURN        (28)
#define LEFT_COUNT_TIME_TRIANGLETURN         (1)


#endif /* MACROS_H_ */
